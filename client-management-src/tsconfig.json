{
  "compilerOptions": {
    "sourceMap": true,
    "module": "esnext",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "target": "es5",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": [
    "./src/*.ts",
    "./src/*.tsx",
    "./src/**/*.d.ts"
  ]
}
